{
  "compilerOptions": {
    "target": "ES2022",                        // Specify ECMAScript target version
    "module": "commonjs",                      // Use CommonJS module system (required for Node.js)
    "esModuleInterop": true,                   // Allows default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,  // Ensure that file names are case-sensitive
    "strict": true,                            // Enable strict type-checking options
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "outDir": "./dist",                        // Specify the output directory for compiled files
    "rootDir": "./src",
    "resolveJsonModule": true,                         // Set the root directory for TypeScript source files
  },
  "include": [
    "src/**/*"                                 // Include all files in the `src` directory
  ],
  "exclude": [
    "node_modules"                             // Exclude the `node_modules` directory
  ]
}
